{
  "include": ["src/**/*.ts", "src/helpers/fetch.js"],
  "compilerOptions": {
    "esModuleInterop": true,
    "module": "ES2020",
    "moduleResolution": "Node",
    "outDir": "dist/",
    "target": "ES2015",
    "resolveJsonModule": true,
    "pretty": false,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "checkJs": true,
    "declaration": true,
    "declarationDir": "./typings"
  }
}
